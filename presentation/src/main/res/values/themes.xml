<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.N.Back.Training" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation.Tint</item>
    </style>

    <style name="Theme.N.Back.Training.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.N.Back.Training.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextView.Sebang" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/sebang_gothic_font_family</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Toolbar.Button.Navigation.Tint" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/black</item>
    </style>
</resources>