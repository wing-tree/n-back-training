<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/text_view_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1"/>

    <TextView
        android:id="@+id/text_view_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_rank"
        app:layout_constraintStart_toEndOf="@+id/text_view_rank"
        app:layout_constraintTop_toTopOf="@+id/text_view_rank"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Nickname" />

    <TextView
        android:id="@+id/text_view_elapsed_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_nickname"
        app:layout_constraintStart_toEndOf="@+id/text_view_nickname"
        app:layout_constraintTop_toTopOf="@+id/text_view_nickname"
        app:layout_constraintVertical_bias="0.0"
        tools:text="20" />

    <TextView
        android:id="@+id/text_view_n"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_rank"
        tools:text="8" />

    <TextView
        android:id="@+id/text_view_rounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@+id/text_view_n"
        app:layout_constraintTop_toBottomOf="@+id/text_view_rank"
        tools:text="30" />

</androidx.constraintlayout.widget.ConstraintLayout>